{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "dom",
      "es2016"
    ],
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "creep-tasks/src/",
    "sourceMap": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "removeComments": true,
    "types": [
      "lodash",
      "screeps"
    ]
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}
